@{
    ViewBag.Title = "Nhà Cung Cấp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts {
    <script>
        $(document).ready(function () {
            callAjax('post', { Token: Cookies.get('token') }, Cookies.get("area"), "management", "NhaCungCap/getAll", function (data) {
                if (data.IsError) {
                    toastr["error"](data.Errors[0]);
                    $("#error").show();
                    $("#error").text(data.Errors[0]);
                }
                else {
                    for (var i = 0; i < data.Data.length; i++) {
                        $('#data_nhacungcap').append("<tr>" +
                            "<td>" + data.Data[i].manhacungcap + "</td>" +
                            "<td>" + data.Data[i].ten + "</td>" +
                            "<td>" + data.Data[i].diachi + "</td>" +
                            "<td>" + data.Data[i].tinhtrang + "</td>" +
                            '<td align="center" valign="middle"><a href="/Manage/Provider/Update?manhacungcap=' + data.Data[i].manhacungcap + '"><i class="fa fa-edit" aria-hidden="true"></i></a></td>' +
                            "</tr>");
                    }
                }
            })
        });
        function addclick() {
            window.location.href = 'http://localhost:8082/Manage/Provider/Create'
        }
    </script>
}
<h2>Quản lý Nhà Cung Cấp</h2>
<div id="controller">

</div>
<div id="list_provider">
    <div class="panel-body">

        <div id="button_function">
            <button type="button" class="btn btn-success" onclick="addclick()">Thêm Nhà Cung Cấp</button>
        </div>

        <div class="dataTable_wrapper">
            <table class="table table-striped table-bordered table-hover" id="dataTables">
                <thead>
                    <tr>
                        <th>Mã Nhà Cung Cấp</th>
                        <th>Tên Nhà Cung Cấp</th>
                        <th>Địa chỉ</th>
                        <th>Tình Trạng</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="data_nhacungcap">
                    @* hien danh sach nha cung cap *@
                </tbody>
            </table>
        </div>
    </div>
</div>

