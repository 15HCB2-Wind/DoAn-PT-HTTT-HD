@{
    ViewBag.Title = "Thêm Nhà Cung Cấp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts {
@Scripts.Render("~/bundles/jqueryval")
    <script>
        function callAjax(type, data, successCallback) {
            $.ajax({
                type: 'post',
                dataType: 'json',
                data: data,
                url: 'http://localhost:8080/Service_Management/webresources/NhaCungCap/add',
                beforeSend: function () { },
                complete: function () { },
                success: function (data) {
                    successCallback(data);
                },
                error: function () {
                    toastr["error"]("Không thể kết nối tới máy chủ !");
                    $("#error").show();
                    $("#error").text("Không thể kết nối tới máy chủ");
                }
            });
        }

        $(document).ready(function () {
            //$('.mdb-select').material_select();
            $('#loader').hide();
            $('#form_create').submit(function () {
                alert("batdau");
                callAjax({
                    Data: {
                        ten: "cong ty bo giong",
                        diachi: "sai gon",
                        tinhtrang: "khong hoat dong"
                    }},
                    function (data) {
                        if (data.IsError) {
                            toastr["error"](data.Errors[0]);
                            $("#error").show();
                            $("#error").text(data.Errors[0]);
                        }
                        else {
                           alert("thành công");
                        }
                    }
                );
                alert("ketthuc");
            });
        });
    </script>
}
<div class="row">
    <div class="offset-lg-3 col-lg-6 offset-md-2 col-md-8 offset-sm-1 col-sm-10 col-xs-12 mt-2">
        <fieldset class="card">
            <form method="post" class="card-block" id="form_create" role="form">
                <div class="form-header bg-primary">
                    <h3><i class="fa fa-sign-in"></i> Thêm Nhà Cung Cấp</h3>
                </div>
                <p id="error" class="text-danger text-center"></p>
                <div class="md-form">
                    <i class="fa fa-envelope prefix"></i>
                    <input id="tenncc" class="form-control" type="text" />
                    <label for="tenncc">Tên Nhà Cung Cấp</label>
                </div>
                <div class="md-form">
                    <i class="fa fa-address-book prefix"></i>
                    <input id="diachi" class="form-control" type="text" />
                    <label for="diachi">Địa Chỉ</label>
                </div>
                <div class="md-form">
                    <i class="fa fa-lock prefix"></i>
                    <input id="tinhtrang" class="form-control" type="text" />
                    <label for="tinhtrang">Tình Trạng</label>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">
                        Tạo Nhà Cung Cấp <i id="loader" class="fa fa-circle-o-notch fa-pulse fa-lg fa-fw"></i>
                    </button>
                </div>
            </form>
            <div id="demo">

            </div>
            <div class="modal-footer">
                <div class="options">
                    <p>@Html.ActionLink("Quay lại trang NHÀ CUNG CẤP?", "Index")</p>
                </div>
            </div>
        </fieldset>
    </div>
</div>
