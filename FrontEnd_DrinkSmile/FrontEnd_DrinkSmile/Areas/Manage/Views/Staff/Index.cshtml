@{
    ViewBag.Title = "Quản lý nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2><i class="fa fa-list"></i> Danh sách nhân viên</h2>
<p id="addStaff1">
    @Html.ActionLink("Thêm nhân viên", "Create")
</p>
<p class="text-center" id="addStaff2">Bạn chưa có nhân viên nào, bấm vào @Html.ActionLink("đây", "Create") để thêm nhân viên.</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Mã NV</th>
            <th>Họ tên</th>
            <th>Email</th>
            <th>Username</th>
            <th>Đã nghỉ</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr id="loader">
            <td colspan="6"><i class="fa fa-circle-o-notch fa-pulse fa-lg fa-fw"></i></td>
        </tr>
    </tbody>
</table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $("#addStaff2").hide();
            callAjax('post', { MaCN: "CN001", MaPQ: "PQ001" }, "hcm", "management", "NhanVien/getAll",
                function (result) {
                    if (result.IsError) {
                        toastr["error"](result.Errors[0]);
                        $("#error").show();
                        $("#error").text(result.Errors[0]);
                    }
                    else {
                        if (result.Data.length > 0) {
                            for (var i = 0; i < result.Data.length; i++) {
                                var html = "<tr>"
                                            + "<td>" + result.Data[i].manhanvien + "</td>"
                                            + "<td>" + result.Data[i].hoten + "</td>"
                                            + "<td>" + result.Data[i].email + "</td>"
                                            + "<td>" + result.Data[i].tentaikhoan + "</td>"
                                            + "<td>" + result.Data[i].daxoa + "</td>"
                                            + "<td><a href='/Manage/Staff/Edit/" + result.Data[i].manhanvien + "'>Cập nhật</a></td>"
                                        + "</tr>";
                                $("tbody").append(html);
                            }
                        }
                        else {
                            $("#addStaff1").hide();
                            $("#addStaff2").show();
                        }
                    }
                });
        });
    </script>
}