@{
    ViewBag.Title = "Cập nhật nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="offset-lg-3 col-lg-6 offset-md-2 col-md-8 offset-sm-1 col-sm-10 col-xs-12">
        <fieldset class="card-block">
            <form id="form_editstaff" method="post" role="form">
                <div class="text-center">
                    <h3><i class="fa fa-pencil-square-o"></i> Cập nhật nhân viên</h3>
                    <hr class="mt-2 mb-2">
                </div>
                <p id="error" class="text-danger text-center"></p>
                <div class="md-form">
                    <i class="fa fa-id-card-o prefix"></i>
                    <input id="hoten" class="form-control" type="text" placeholder="" required="required" />
                    <label id="hotenerror" for="hoten">Họ tên</label>
                </div>
                <div class="col-xs-12">
                    <div class="row">
                        <div class="col-sm-6 col-xs-12">
                            <div class="md-form">
                                <i class="fa fa-calendar prefix"></i>
                                <input type="text" id="ngaysinh" class="form-control datepicker" placeholder="" name="ngaysinh">
                                <label for="ngaysinh">Ngày sinh</label>
                            </div>
                        </div>
                        <div class="col-sm-6 col-xs-12">
                            <div class="form-inline mt-1">
                                <div class="form-group">
                                    <input id="nam" name="gioitinh" type="radio" class="with-gap" value="Nam">
                                    <label for="nam">Nam</label>
                                </div>
                                <div class="form-group">
                                    <input id="nu" name="gioitinh" type="radio" class="with-gap" value="Nữ">
                                    <label for="nu">Nữ</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="md-form">
                    <i class="fa fa-map-marker prefix"></i>
                    <input id="diachi" class="form-control" type="text" placeholder="" />
                    <label for="diachi">Địa chỉ</label>
                </div>
                <div class="md-form">
                    <i class="fa fa-envelope-o prefix"></i>
                    <input id="email" class="form-control" type="email" placeholder="" disabled="disabled" />
                    <label for="email">Email (tên tài khoản)</label>
                </div>
                <div class="md-form">
                    <i class="fa fa-mobile prefix"></i>
                    <input id="sodt" class="form-control" type="tel" placeholder="" />
                    <label for="sodt">Số điện thoại</label>
                </div>
                <div class="md-form">
                    <i class="fa fa-comment-o prefix"></i>
                    <input id="tinhtrang" class="form-control" type="text" placeholder="" />
                    <label for="tinhtrang">Tình trạng</label>
                </div>
                <input type="hidden" id="manv" />
                <input type="hidden" id="daxoa" />
                @*<input type="hidden" id="macn" />*@
                @*<input type="hidden" id="mapq" />*@
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">
                        Lưu <i id="loader" class="fa fa-circle-o-notch fa-pulse fa-lg fa-fw"></i>
                    </button>

                    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#myModal">Thoát</button>
                    <!-- Modal -->
                    <div class="modal fade" id="myModal" tabindex="-1" role="dialog">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
                                    <h4 class="modal-title w-100">Thoát</h4>
                                </div>
                                <div class="modal-body text-center">
                                    Bạn thực sự muốn thoát?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                                    <a class="btn btn-danger" href="@Url.Action("Index")">Đồng ý</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </fieldset>
        <p class="text-center">
            <i id="loader1" class="fa fa-circle-o-notch fa-pulse fa-2x"></i>
            <a id="back" class="btn btn-danger" href="@Url.Action("Index")">Trở về trang quản lý</a>
        </p>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
            $("fieldset").hide();
            $("#loader").hide();
            $("#back").hide();

            callAjax('post', { Token: Cookies.get("token"), UserId: '@ViewBag.MaNV' }, Cookies.get("area"), "management", "NhanVien/get",
                    function (result) {
                        $('#loader1').hide();
                        if (result.IsError) {
                            $("#back").show();
                            toastr["error"](result.Errors[0]);
                        }
                        else {
                            $("fieldset").show();
                            $("#hoten").val(result.Data.hoten);
                            //$("#ngaysinh").val(result.Data.ngaysinh);
                            $("#ngaysinh").attr("data-value", result.Data.ngaysinh);
                            $('.datepicker').pickadate({
                                monthsFull: ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4', 'Tháng 5', 'Tháng 6', 'Tháng 7', 'Tháng 8', 'Tháng 9', 'Tháng 10', 'Tháng 11', 'Tháng 12'],
                                monthsShort: ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4', 'Tháng 5', 'Tháng 6', 'Tháng 7', 'Tháng 8', 'Tháng 9', 'Tháng 10', 'Tháng 11', 'Tháng 12'],
                                weekdaysFull: ['Chủ nhật', 'Thứ 2', 'Thứ 3', 'Thứ 4', 'Thứ 5', 'Thứ 6', 'Thứ 7'],
                                weekdaysShort: ['CN', 'T2', 'T3', 'T4', 'T5', 'T6', 'T7'],

                                showMonthsShort: true,
                                showWeekdaysFull: false,

                                today: 'Hôm nay',
                                clear: '',
                                close: 'Đóng',

                                labelMonthNext: 'Tháng sau',
                                labelMonthPrev: 'Tháng trước',
                                labelMonthSelect: 'Chọn tháng',
                                labelYearSelect: 'Chọn năm',

                                firstDay: 1,
                                format: 'dd-mm-yyyy',
                                formatSubmit: 'yyyy-mm-dd',
                                hiddenPrefix: 'prefix_',

                                min: new Date(1752, 0, 1),
                                max: new Date(9998, 11, 31)
                            });

                            if (result.Data.gioitinh == "Nam") {
                                $("#nam").attr("checked", "checked");
                            }
                            else {
                                $("#nu").attr("checked", "checked");
                            }
                            $("#diachi").val(result.Data.diachi);
                            $("#email").val(result.Data.email);
                            $("#sodt").val(result.Data.sodt);
                            $("#tinhtrang").val(result.Data.tinhtrang);

                            $("#manv").val(result.Data.manhanvien);
                            $("#daxoa").val(result.Data.daxoa);
                            //$("#macn").val(result.Data.machinhanh);
                            //$("#mapq").val(result.Data.maphanquyen);


                            if (result.Data.daxoa == false) {
                                $("#btnAction").text("Xóa");
                            }
                            else {
                                $("#btnAction").text("Khôi phục");
                            }
                        }
                    }
                )

            $("#form_editstaff").submit(function (e) {
                e.preventDefault();

                var ngaysinh = $("input[name=prefix_ngaysinh_submit]").val();
                if (ngaysinh == "") { ngaysinh = null; }

                var diachi = $("#diachi").val();
                if (diachi == "") { diachi = null; }

                var sodt = $("#sodt").val();
                if (sodt == "") { sodt = null; }

                var tinhtrang = $("#tinhtrang").val();
                if (tinhtrang == "") { tinhtrang = null; }

                callAjax('post', {
                    Token: Cookies.get("token"),
                    Data: {
                        hoten: $("#hoten").val(),
                        ngaysinh: ngaysinh,
                        gioitinh: $("input[name=gioitinh]:checked", "#form_editstaff").val(),
                        diachi: diachi,
                        //email: $("#email").val(),
                        sodt: sodt,
                        tinhtrang: tinhtrang,
                        manhanvien: $("#manv").val(),
                        //machinhanh: $("#macn").val(),
                        //maphanquyen: $("#mapq").val(),
                        //daxoa: $("#daxoa").val()
                    }
                }, Cookies.get("area"), "management", "NhanVien/update",
                    function (result) {
                        if (result.IsError) {
                            if (result.NameErrors.length > 0) {
                                $("#hoten").addClass("validate invalid");
                                $("#hotenerror").addClass("active");
                                $("#hotenerror").attr("data-error", result.NameErrors[0]);
                            }

                            if (result.Errors.length > 0) {
                                toastr["error"](result.Errors[0]);
                            }
                        }
                        else {
                            location.href = "/Manage/Staff/Index";
                        }
                    }
                )
            });
        });
    </script>
}
