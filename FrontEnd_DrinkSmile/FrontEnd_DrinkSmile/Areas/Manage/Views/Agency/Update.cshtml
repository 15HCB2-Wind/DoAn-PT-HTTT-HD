@{
    ViewBag.Title = "Cập nhật Chi Nhánh";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="offset-lg-3 col-lg-6 offset-md-2 col-md-8 offset-sm-1 col-sm-10 col-xs-12">
        <fieldset class="card-block">
            <form id="form_create" method="post" role="form">
                <div class="text-center">
                    <h3><i class="fa fa-wrench"></i> Cập nhật Chi Nhánh</h3>
                    <hr class="mt-2 mb-2">
                </div>
                <p id="error" class="text-danger text-center"></p>
                <div class="md-form">
                    <i class="fa fa-id-card-o prefix"></i>
                    <input id="ten" class="form-control" type="text" required="required" />
                    <label id="tenerror" for="ten">Tên</label>
                </div>
                <div class="btn-group">
                    <i class="fa fa-user prefix"></i>
                    <label id="nverror" for="btnNV">Nhân viên Quản Lý</label>
                    <button id="btnNV" class="form-control" type="button" style="right:0" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Nhân viên Quản Lý</button>
                    <div class="dropdown-menu" id="dropdownNV">
                        <!--load data danh sach nhanvien-->
                    </div>
                </div>
                <div class="md-form">
                    <i class="fa fa-mobile-phone prefix"></i>
                    <input id="sdt" class="form-control" type="text" />
                    <label for="sdt">Số Điện Thoại</label>
                </div>
                <div class="md-form">
                    <i class="fa fa-map-marker prefix"></i>
                    <input id="diachi" class="form-control" type="text" />
                    <label for="diachi">Địa chỉ</label>
                </div>
                <div class="md-form">
                    <i class="fa fa-rss prefix"></i>
                    <input id="tinhtrang" class="form-control" type="tel" />
                    <label for="tinhtrang">Tình Trạng</label>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">
                        Lưu <i id="loader" class="fa fa-circle-o-notch fa-pulse fa-lg fa-fw"></i>
                    </button>
                    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#myModal">Thoát</button>
                    <!-- Modal -->
                    <div class="modal fade" id="myModal" tabindex="-1" role="dialog">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
                                    <h4 class="modal-title w-100">Thoát</h4>
                                </div>
                                <div class="modal-body text-center">
                                    Bạn thực sự muốn thoát?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                                    <a class="btn btn-danger" href="@Url.Action("Index")">Đồng ý</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </fieldset>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        var listnv;
        var manv;
        $(document).ready(function () {

            //load chi nhanh
            var machinhanh = QueryString['machinhanh'];
            //load nha cung cap can update
            callAjax('post', { Predicates: [machinhanh] }, "hcm", "management", "ChiNhanh/getSingle", function (DSChiNhanh) {
                if (DSChiNhanh.Data == null) {
                    toastr["error"]("Chi Nhánh không tồn tại!");
                    //alert("Lỗi Hệ Thống");
                    window.location.href = 'http://localhost:8082/Manage/Agency'
                }
                else {
                    var ten = document.getElementById('ten');
                    ten.value = DSChiNhanh.Data.tenchinhanh;
                    var sdt = document.getElementById('sdt');
                    sdt.value = DSChiNhanh.Data.sodt;
                    var diachi = document.getElementById('diachi');
                    diachi.value = DSChiNhanh.Data.diachi;
                    var tinhtrang = document.getElementById('tinhtrang');
                    tinhtrang.value = DSChiNhanh.Data.tinhtrang;
                    var quanly = document.getElementById('btnNV');

                    //load nhân viên quản lý
                    callAjax('post', { MaCN: machinhanh, MaPQ: "PQ002" }, "hcm", "management", "NhanVien/getAllOfAgency", function (DSNhanVien) {
                        listnv = DSNhanVien.Data;
                        for (var i = 0; i < DSNhanVien.Data.length; i++) {
                            $("#dropdownNV").append('<a class="dropdown-item" onclick="nhanvienclick(' + i + ')">' + DSNhanVien.Data[i].hoten + '</a>');
                        }

                        for (var i = 0; i < DSNhanVien.Data.length; i++) {
                            if (DSChiNhanh.Data.quanly == DSNhanVien.Data[i].manhanvien) {
                                quanly.innerHTML = DSNhanVien.Data[i].hoten;
                            }
                        }
                    });
                }

                
            });
           

            //ẩn loader

            $('#loader').hide();

            //lưu chi nhánh
            $('#form_create').submit(function (e) {
                e.preventDefault();

                var diachi = $("#diachi").val();
                if (diachi == "") { diachi = null; }

                var sdt = $("#sdt").val();
                if (sdt == "") { sdt = null; }

                var tinhtrang = $("#tinhtrang").val();
                if (tinhtrang == "") { tinhtrang = null; }
                var daxoa = false;
                callAjax('post', {
                    Data: {
                        machinhanh: machinhanh,
                        tenchinhanh: $("#ten").val(),
                        sodt: sdt,
                        diachi: diachi,
                        tinhtrang: tinhtrang,
                        daxoa: daxoa,
                        quanly: manv
                    }
                }, "hcm", "management", "ChiNhanh/update",
                    function (result) {
                        if (result.IsError) {
                            if (result.NameErrors.length > 0) {
                                $("#ten").addClass("validate invalid");
                                $("#tenerror").addClass("active");
                                $("#tenerror").attr("data-error", result.NameErrors[0]);
                            }
                            if (result.ManagerErrors.length > 0) {
                                $("#nverror").addClass("active");
                                $("#nverror").attr("data-error", result.NameErrors[0]);
                            }
                            if (result.Errors.length > 0) {
                                toastr["error"](result.Errors[0]);
                            }
                        }
                        else {
                            Data = null;
                            toastr["success"](result.Data);
                            $('#form_create')[0].reset();
                        }
                    }
                )
            });
        });
        function nhanvienclick(data) {
            var btnNV = document.getElementById('btnNV');
            btnNV.innerHTML = listnv[data].hoten;
            manv = listnv[data].manhanvien;
        };
    </script>
}
