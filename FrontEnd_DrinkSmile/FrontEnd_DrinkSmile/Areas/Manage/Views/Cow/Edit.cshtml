
@{
    ViewBag.Title = "Cập nhật thông tin bò";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="offset-lg-3 col-lg-6 offset-md-2 col-md-8 offset-sm-1 col-sm-10 col-xs-12">
        <fieldset class="card-block">
            <form id="form_action" method="post" role="form">
                <div class="text-center">
                    <h3><i class="fa fa-weixin" aria-hidden="true"></i> Cập nhật thông tin bò</h3>
                    <hr class="mt-2 mb-2">
                </div>
                <p id="error" class="text-danger text-center"></p>
                <div class="md-form form-sm">
                    <i class="fa fa-android prefix" aria-hidden="true"></i>
                    <input id="machip" class="form-control" type="text" />
                    <label for="machip">Mã chip</label>
                </div>
                <div class="md-form form-sm">
                    <i class="fa fa-google-wallet prefix" aria-hidden="true"></i>
                    <input id="mausac" class="form-control" type="text" />
                    <label for="mausac">Màu sắc</label>
                </div>
                <br />
                <fieldset class="form-group">
                    <input type="checkbox" id="coditat">
                    <label for="coditat">Có dị tật</label>
                </fieldset>
                <div class="md-form form-sm">
                    <i class="fa fa-github-alt prefix" aria-hidden="true"></i>
                    <input id="nhandang" class="form-control" type="text" />
                    <label for="nhandang">Nhận dạng</label>
                </div>
                <br />
                <div class="md-form form-sm">
                    <i class="fa fa-pencil-square-o prefix"></i>
                    <select id="chuongtrai" class="mdb-select danh-muc-chuongtrai"></select>
                    <label>Chuồng</label>
                </div>
                <br />
                <div class="md-form form-sm">
                    <i class="fa fa-pencil-square-o prefix"></i>
                    <select id="tinhtrang" class="mdb-select danh-muc-tinhtrang">
                        <option>Khỏe mạnh.</option>
                        <option>Đang ốm.</option>
                        <option>Vấn đề khác.</option>
                        <option disabled>- - - - -</option>
                    </select>
                    <label>Tình trạng</label>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Lưu <i id="loader" class="fa fa-circle-o-notch fa-pulse fa-lg fa-fw"></i></button>
                    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#myModal">Thoát</button>
                    <!-- Modal -->
                    <div class="modal fade" id="myModal" tabindex="-1" role="dialog">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
                                    <h4 class="modal-title w-100">Thoát</h4>
                                </div>
                                <div class="modal-body text-center">
                                    Bạn thực sự muốn thoát?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                                    <a class="btn btn-danger" href="@Url.Action("Index")">Đồng ý</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </fieldset>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            //init
            $('.mdb-select').material_select();
            
            callAjax('post',
                    {
                        Token: Cookies.get('token'),
                    },
                    Cookies.get('area'), 'management', 'ChuongTrai/getAll',
                    function (data) {
                        if (data.IsError) {
                            toastr["error"](data.Errors[0]);
                            $("#error").show();
                            $("#error").text(data.Errors[0]);
                        }
                        else {
                            if (data.Data) {
                                for (var i = 0; i < data.Data; i++) {
                                    $('#chuongbo').append(
                                        '<option value="' + data.Data[i].machuong + '">' + data.Data[i].tenchuong + '</option>'
                                        );
                                }
                                $('.danh-muc-chuongtrai input[type=text]').val(QueryString['barn']);
                                $('#chuongtrai').val(QueryString['barn']);
                            }
                        }
                    });

            $('#machip').val(QueryString['chip']);
            $('#mausac').val(QueryString['color']);
            $('#coditat').val(QueryString['hasD']);
            $('#nhandang').val(QueryString['spe']);
            //$('.danh-muc-chuongtrai input[type=text]').val(QueryString['barn']);
            //$('#chuongtrai').val(QueryString['barn']);
            $('.danh-muc-tinhtrang input[type=text]').val(QueryString['sta']);
            $('#tinhtrang').val(QueryString['sta']);
            //=====
            $('#loader').hide();
            $('#form_action').submit(function (e) {
                e.preventDefault();
                callAjax('post',
                    {
                        Token: Cookies.get('token'),
                        Data: {
                            mabo: QueryString['id']
                        }
                    },
                    Cookies.get('area'), 'management', 'Bo/update',
                    function (data) {
                        if (data.IsError) {
                            toastr["error"](data.Errors[0]);
                            $("#error").show();
                            $("#error").text(data.Errors[0]);
                        }
                        else {
                            toastr["success"](data.Data);
                            $('#form_action')[0].reset();
                        }
                    });
            });
        });
    </script>
}