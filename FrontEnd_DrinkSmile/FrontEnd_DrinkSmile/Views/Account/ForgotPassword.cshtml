@model FrontEnd_DrinkSmile.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Quên mật khẩu";
}
<div class="row">
    <div class="offset-lg-3 col-lg-6 offset-md-2 col-md-8 offset-sm-1 col-sm-10 col-xs-12 mt-2">
        <div class="card">
            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "card-block", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-header bg-primary">
                    <h3>Quên mật khẩu</h3>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger text-center" })
                <div class="md-form">
                    <i class="fa fa-envelope prefix"></i>
                    @Html.TextBoxFor(m => m.Email, new { @id = "email", @class = "form-control" })
                    @Html.LabelFor(m => m.Email, new { @for = "email" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Gửi</button>
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
