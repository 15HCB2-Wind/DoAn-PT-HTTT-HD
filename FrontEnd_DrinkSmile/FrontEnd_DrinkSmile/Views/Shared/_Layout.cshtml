<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @*@Scripts.Render("~/bundles/modernizr")*@
</head>
<body class="fixed-sn">
    <header>
        <nav class="navbar navbar-toggleable-sm fixed-top navbar-dark unique-color">
            <div class="container">
                <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#nav" aria-controls="nav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img src="~/Content/logo.jpg" width="25" height="25" class="d-inline-block align-top z-depth-0">
                    Drink Smile
                </a>
                <div class="collapse navbar-collapse" id="nav">
                    @if (Request.Cookies["manv"] != null)
                    {
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown">@*<i class="fa fa-pencil-square-o"></i>*@Ghi chép</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="@Url.Action("Index", "KhoanTien")"><i class="fa fa-money fa-fw"></i> Thu chi</a>
                                    <a class="dropdown-item" href="@Url.Action("CreateTransfer", "KhoanTien")"><i class="fa fa-exchange fa-fw"></i> Chuyển khoản</a>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "TaiKhoan")">Tài khoản</a>
                            </li>
                            @*<li class="nav-item">
                                    <a class="nav-link"><i class="fa fa-pie-chart"></i>Báo cáo</a>
                                </li>*@
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown">@*<i class="fa fa-file-text-o"></i>*@Danh mục</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="@Url.Action("DanhMucThu", "DanhMuc")"><i class="fa fa-plus-circle fa-fw"></i> Thu</a>
                                    <a class="dropdown-item" href="@Url.Action("DanhMucChi", "DanhMuc")"><i class="fa fa-minus-circle fa-fw"></i> Chi</a>
                                </div>
                            </li>
                        </ul>
                    }
                    <ul class="navbar-nav ml-auto">
                        @Html.Partial("_LoginPartial")
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main>
        <div class="container-fluid">
            @RenderBody()
        </div>
    </main>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)
</body>
</html>